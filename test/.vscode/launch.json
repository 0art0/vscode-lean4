// A launch configuration that compiles the extension and then opens it inside a new window.
// It also has a configuration called "Debug Extension Tests" which can be used to debug
// the tests in the src/test/suite folder.
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/../vscode-lean4",
				"--extensionTestsPath=${workspaceFolder}/out/test/lean3/",
                "--new-window"
			],
			"outFiles": ["${workspaceFolder}/out/test/**/*.js"],
			"preLaunchTask": "npm: watch",
		}
	]
}
