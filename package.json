{
    "name": "lean",
    "displayName": "lean",
    "description": "An extension for VS Code which provides support for the Lean language.",
    "version": "0.3.0",
    "publisher": "jroesch",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages"
    ],
    "repository": "https://github.com/jroesch/vscode-lean",
    "contributes": {
        "languages": [
            {
                "id": "lean",
                "aliases": [
                    "Lean",
                    "lean"
                ],
                "extensions": [
                    ".lean"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lean",
                "scopeName": "source.lean",
                "path": "./syntaxes/lean.tmLanguage"
            }
        ],
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:lean",
        "onCommand:extension.sayHello"
    ],
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "carrier": "0.3.0"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}