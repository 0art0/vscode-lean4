{
    "name": "lean",
    "displayName": "lean",
    "description": "An extension for VS Code which provides support for the Lean language.",
    "version": "0.6.0",
    "publisher": "jroesch",
    "engines": {
        "vscode": "^1.8.0"
    },
    "categories": [
        "Languages"
    ],
    "repository": "https://github.com/leanprover/vscode-lean",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Lean configuration",
            "properties": {
                "lean.executablePath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the Lean executable to use."
                }
            }
        },
        "commands": [
            {
                "command": "lean.restartServer",
                "title": "Lean: Restart",
                "description": "Restart the Language Server"
            },
            {
                "command": "lean.displayGoal",
                "title": "Lean: Display Goal",
                "description": "Display the goal at the current position."
            },
            {
                "command": "lean.batchExecute",
                "title": "Lean: Batch Execute File",
                "description": "Execute the current file using Lean"
            }
        ],
        "languages": [
            {
                "id": "lean",
                "aliases": [
                    "Lean",
                    "lean"
                ],
                "extensions": [
                    ".lean"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lean",
                "scopeName": "source.lean",
                "path": "./syntaxes/lean.json"
            }
        ],
        "keybindings": [
            {
                "command": "lean.displayGoal",
                "key": "ctrl+shift+enter",
                "mac": "cmd+shift+enter",
                "when": "editorTextFocus"
            },
            {
                "command": "lean.batchExecute",
                "key": "ctrl+shift+r",
                "mac": "cmd+shift+r",
                "when": "editorTextFocus"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:lean",
        "onCommand:lean.displayGoal"
    ],
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "carrier": "0.3.0",
        "load-json-file": "1.1.0"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "icon": "lean_logo.svg",
    "license": "Apache-2.0"
}